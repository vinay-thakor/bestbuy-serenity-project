<?xml version="1.0" encoding="UTF-8"?>
<!--This xml file is required to generate Cucumber Extent report-->
<!-- standard format if any changes made Extent report will not work/generate-->
<extentreports>
    <configuration>
        <!-- report theme --> <!-- standard, dark -->
        <theme>standard</theme>

        <!-- document encoding -->  <!-- defaults to UTF-8 -->
        <encoding>UTF-8</encoding>

        <!-- protocol for script and stylesheets -->   <!-- defaults to https -->
        <protocol>https</protocol>

        <!-- title of the document or report -->
        <documentTitle>BestBuy API - Cucumber Framework</documentTitle>

        <!-- report name - displayed at top-nav -->
        <reportName>BestBuy API - Cucumber Report</reportName>

        <!-- global date format override -->  <!-- defaults to yyyy-MM-dd -->
        <dateFormat>yyyy-MM-dd</dateFormat>

        <!-- global time format override -->   <!-- defaults to HH:mm:ss -->
        <timeFormat>HH:mm:ss</timeFormat>

        <!-- custom javascript -->
        <scripts>
            <![CDATA[
        $(document).ready(function() {

        });
      ]]>
        </scripts>

        <!-- custom styles -->
        <styles>
            <![CDATA[

      ]]>
        </styles>
    </configuration>
</extentreports>